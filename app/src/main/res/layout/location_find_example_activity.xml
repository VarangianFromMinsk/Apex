<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.Screens.Additional.location_Card_Google.Location_Find_Example_Activity">

    <Button
        android:id="@+id/startLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:text="start location"
        app:backgroundTint="#BA4A4A"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="342dp" />

    <Button
        android:id="@+id/stopLocation"
        android:layout_marginTop="230dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        app:backgroundTint="#D58989"
        android:text="stop location"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="424dp" />

    <TextView
        android:id="@+id/textLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="0.00/0.00"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textTimeOfLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="12:00"
        android:textColor="#000000"
        android:textSize="30sp" />
</RelativeLayout>