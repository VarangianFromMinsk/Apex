<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/postCardView"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_margin="2dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="1dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pRecImageIv"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription" />

            <RelativeLayout
                android:id="@+id/layToSetLike"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="190dp"
                    android:layout_height="30dp"
                    android:background="#00FFFFFF"
                    android:src="@drawable/custom_apex_back"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/likeIvRecommend"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="3dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:textColor="?attr/colorControlNormal"
                    app:backgroundTint="#00DCD6D6"
                    app:srcCompat="@drawable/likeoff"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/pLikesRecTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="5dp"
                    android:layout_toEndOf="@+id/likeIvRecommend"
                    android:maxWidth="10dp"
                    android:text="--"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText,SmallSp" />

            </RelativeLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>